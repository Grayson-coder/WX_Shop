/* pages/category/category.wxss */

.container {
    display: flex;
    height: calc(100vh - 110rpx);
}

/* 左侧菜单栏 */
.container .left-menu {
    flex: 3;
    background-color: rgb(245, 245, 245);
    text-align: center;
}

.container .left-menu .item {
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #eaeaea;
}

.container .left-menu .active {
    color: #ff1493;
    background-color: white;
    border-left: 6rpx solid #ff1493;
}



/* 右侧内容区 */
.container .right-conent {
    flex: 6;
}

.container .right-conent .cat-title {
    height: 60rpx;
    line-height: 60rpx;
    background-color: rgb(246, 246, 246);
    text-align: center;
}

.container .right-conent .wrap {
    display: flex;
    flex-wrap: wrap;
    text-align: center;
    margin-top: 20rpx;
}

.container .right-conent .wrap .brand-list {
    width: 25%;
    margin-left: 35rpx;
    margin-top: 25rpx;
}

.container .right-conent .wrap .brand-list .brand-img {
    width: 100%;
    height: 130rpx;
    margin-bottom: 7rpx;
}